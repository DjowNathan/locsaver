<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="12dip"
    app:cardElevation="8dp">

    <LinearLayout
        android:id="@+id/layoutItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="10dip"
        android:paddingHorizontal="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <GridLayout
            android:rowCount="1"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Criado em: "
                android:textColor="@color/black"
                android:textSize="8pt"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textViewDataCriacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:text="14/11/2020 12:00"
                android:textColor="@color/black"
                android:textSize="8pt"
                tools:ignore="HardcodedText" />

        </GridLayout>
        <TextView
            android:id="@+id/textViewDescricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="20dip"
            android:text="Teste de Descrição"
            android:textColor="@color/black"
            android:textSize="8pt"
            tools:ignore="HardcodedText" />


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:alignmentMode="alignMargins"
            android:columnCount="3"
            android:rowCount="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Coordenadas: "
                android:textColor="@color/black"
                android:textSize="8pt"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textViewLatitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:text="-23,56969"
                android:textColor="@color/black"
                android:textSize="8pt"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textViewLongitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:text="-23,56969"
                android:textColor="@color/black"
                android:textSize="8pt"
                tools:ignore="HardcodedText" />

        </GridLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>